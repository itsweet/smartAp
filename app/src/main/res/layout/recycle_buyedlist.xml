<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/recycle_buyedlist_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/recycle_buyedlist_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:contentDescription="TODO"
            app:srcCompat="@android:drawable/arrow_down_float" />

        <TextView
            android:id="@+id/recycle_buyed_text1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="start|center_vertical"
            android:layout_weight="1"
            android:text="联系人" />

        <TextView
            android:id="@+id/text_colon1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="*" />

        <TextView
            android:id="@+id/recycle_buyed_text2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"
            android:gravity="center"
            android:text="数量" />

        <TextView
            android:id="@+id/text_colon2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0"
            android:gravity="center"
            android:text="：" />

        <TextView
            android:id="@+id/recycle_buyed_text3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="总价" />

        <Button
            android:id="@+id/recycle_buyedlist_allfinish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="0"
            android:text="全部完成" />

    </LinearLayout>

    <ListView
        android:id="@+id/recycle_buyedlist_list"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:focusable="true"

        android:descendantFocusability="afterDescendants"
        app:layout_constraintTop_toBottomOf="@+id/recycle_buyedlist_linearLayout">

    </ListView>


</android.support.constraint.ConstraintLayout>