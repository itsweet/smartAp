<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="afterDescendants">

    <TextView
        android:id="@+id/recycle_text1_1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/recycle_text1_2"
        android:gravity="start"
        android:text="商品名称" />

    <TextView
        android:id="@+id/recycle_text2_1"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/recycle_text1_1"
        android:gravity="start"
        android:text="客户名称" />

    <TextView
        android:id="@+id/recycle_text1_2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:text="数量" />

    <TextView
        android:id="@+id/recycle_text2_2"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/recycle_text1_1"
        android:layout_toEndOf="@+id/recycle_text2_1"
        android:layout_toStartOf="@+id/recycle_text2_3"
        android:text="备注" />

    <TextView
        android:id="@+id/recycle_text2_3"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="false"
        android:layout_below="@+id/recycle_text1_1"
        android:layout_toStartOf="@+id/radioButton"
        android:gravity="center"
        android:text="进价" />


    <RadioButton
        android:id="@+id/radioButton"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentEnd="true"
        android:focusable="false"
        android:layout_below="@+id/recycle_text1_1"
        android:text="购买" />

</RelativeLayout>